<%= stylesheet_link_tag   'loggedin', media: 'all' %>

<header class='navbar'>
  <div id="restaurant"><%= link_to "Taqueria", profile_path %></div>
  <div id="employee">
    <%= @employee.name.capitalize %> |
    <% if @employee.is_admin %><%= 'Manager' %><% else %><%= 'Server' %><% end %> at
    <%= @employee.restaurant_location.split(/ |\_/).map(&:capitalize).join(" ") %> |
    <%= link_to "Home", profile_path %>
  </div>
</header><br>

<div class='content'>

  <div class='six columns offset-by-three'>
    <div class='menu'>

    <%= @item.name %><br>

    <%= form_for @item do |f| %>
      <%= f.label :price %>
      <%= f.number_field :price %>
      <br>
      <%= f.submit "Save" %>
    <% end %>

    <%= button_to "X", item_path, {method: 'delete'} %>

  </div>
</div>

<footer class='footer'><%= link_to "SIGN OUT", delete_session_path, {method: 'delete', id: 'signout', class:'all-buttons'} %></footer>
