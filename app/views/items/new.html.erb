<%= stylesheet_link_tag   'loggedin', media: 'all' %>

<header class='navbar'>
  <div id="restaurant">Taqueria</div>
  <div id="employee">
    <%= @employee.name.capitalize %> |
    <% if @employee.is_admin %><%= 'Manager' %><% else %><%= 'Server' %><% end %> at
    <%= @employee.restaurant_location.split(/ |\_/).map(&:capitalize).join(" ") %> |
    <%= link_to "Home", profile_path %>
  </div>
</header><br>

<div class='content'>

  <div class='six columns offset-by-three'>
    <div class='menu'>

    <%= form_for @item do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>

      <%= f.label :category %>
      <%= f.select :category, ['drinks', 'meals', 'desserts'] %>
      <br>

      <%= f.label :price %>
      <%= f.number_field :price %>
      <br>

      <%= f.submit %>

    <% end %>

    <%= button_to "Back", admin_path, {method: 'get'} %>

    </div>
  </div>

</div>
