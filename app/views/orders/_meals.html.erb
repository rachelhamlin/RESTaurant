<%= form_tag order_path, method: :post do %>
​
  <% @meals.each do |meal| %>
    <%= label_tag meal[:name]  %>
    <%= hidden_field_tag "order[meals][][id]", meal[:id] %>
    <%= hidden_field_tag "party_id", @party.id %>
    <%= number_field_tag "order[meals][][quantity]", min: 0  %>
  <% end %>
​   <br>
  <%= submit_tag "Add or Skip" %>
​
<% end %>


<%= form_tag party_path(@party), method: :put do -%>
  <%= hidden_field_tag "party[status]", @party.status-1 -%>
  <%= submit_tag 'Back to drinks' -%>
<% end %>
