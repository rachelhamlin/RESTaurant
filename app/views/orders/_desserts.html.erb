<%= form_tag order_path, method: :post do %>
​
  <% @desserts.each do |dessert| %>
    <%= label_tag dessert[:name]  %>
    <%= hidden_field_tag "order[desserts][][id]", dessert[:id] %>
    <%= hidden_field_tag "party_id", @party.id %>
    <%= number_field_tag "order[desserts][][quantity]", min: 0  %>
  <% end %>
​   <br>
  <%= submit_tag "Add" %>
​
<% end %>

<%= form_tag party_path(@party), method: :put do -%>
  <%= hidden_field_tag "party[status]", @party.status-1 -%>
  <%= submit_tag 'Back to meals' -%>
<% end %>
