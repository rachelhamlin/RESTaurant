<%= stylesheet_link_tag   'loggedin', media: 'all' %>

<header class='navbar'>
  <div id="restaurant">Taqueria</div>
  <div id="employee"><%= @employee.name.capitalize %> | <%= @employee.restaurant_location.split(/ |\_/).map(&:capitalize).join(" ") %> | <%= link_to "Home", profile_path %></div>
</header><br>

<div class='content'>

  <% @parties.each do |party| %>

    <p><%= link_to "Table #{party.table_number}", order_path(party), {method: 'get'} %></p>

  <% end %>

  <%= button_to "New Party", new_party_path, {method: 'get'}  %>
  <%= button_to "Back", profile_path, {method: 'get'} %>

</div>
