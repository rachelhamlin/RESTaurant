<%= stylesheet_link_tag   'loggedin', media: 'all' %>

<header class='navbar'>
  <div id="restaurant">Taqueria</div>
  <div id="employee"><%= link_to "Home", root_path %></div>
</header><br>

<div class='content'>

  <div class='six columns offset-by-three'>
    <div class='menu items-page'>

    <h2>Register</h2>

    <%= form_for @employee do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :restaurant_location, "Restaurant Location" %>
      <%= f.text_field :restaurant_location %>
      <br>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <br>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>
      <%= f.label "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit "Sign up" %>

    <% end %>

    <%= button_to "Sign In", log_in_path, {method: 'get'} %>

    </div>
  </div>
</div>
