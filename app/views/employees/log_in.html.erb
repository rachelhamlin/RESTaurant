<h2>Sign in</h2>

<%= form_tag '/sessions', method: :post do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Sign in" %>

<% end %>

<%= button_to "Create Account", new_employee_path, {method: 'get'} %>
